<% provide(:page_title, @post.title) %>
<% provide(:blog_active, 'active') %>

<div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2 text-xs-center">
    <h1><%= @post.title %></h1>
    <p><%= @post.display_day_published %></p>
    <p><%= @post.author.email %></p>
    <%= @post.body.html_safe %>
    </div>
</div>






  <h3>Comments</h3>
<% @post.comments.each do |comment| %>
  <div>
    <strong><%= comment.name %></strong>
    <br>
    <p><%= comment.email %></p>
    <p><%= comment.content %></p>
    <p><%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %></p>
  
  </div>
<% end %>



  <% @post.comments.each do |comment| %>
	<%= comment.name %>
	<%= comment.content %>

<% end %>


<%= link_to "Add Comment", new_comment_path(post_id: @post.id) %>

<%= link_to 'Back', posts_path, class: 'btn btn-sm btn-danger' %>